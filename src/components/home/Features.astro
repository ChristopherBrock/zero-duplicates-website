---
// File: components/home/Features.astro
import { getLocaleFromUrl } from '../../i18n/ui';
import { translations } from '../../i18n/translations';

const currentLang = getLocaleFromUrl(Astro.url);
const t = translations[currentLang];
---

<section id="features" class="py-24 bg-background" aria-labelledby="features-heading">
  <div class="container-width">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 id="features-heading" class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        {t.features.title}
      </h2>
      <p class="mt-6 text-lg leading-8 text-text-secondary">
        {t.features.subtitle}
      </p>
    </div>

    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
      <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
        {/* Using h3 for feature titles */}
        <div class="relative bg-background-elevated p-8 rounded-2xl border border-white/10">
          <dt>
            <h3 class="flex items-center gap-x-3 text-base font-semibold leading-7 text-white">
              <svg class="h-5 w-5 flex-none text-swift-blue" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {t.features.list.smartDetection.title}
            </h3>
          </dt>
          <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-text-secondary">
            <p class="flex-auto">{t.features.list.smartDetection.description}</p>
          </dd>
        </div>

        <div class="relative bg-background-elevated p-8 rounded-2xl border border-white/10">
          <dt>
            <h3 class="flex items-center gap-x-3 text-base font-semibold leading-7 text-white">
              <svg class="h-5 w-5 flex-none text-swift-blue" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {t.features.list.safeRemoval.title}
            </h3>
          </dt>
          <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-text-secondary">
            <p class="flex-auto">{t.features.list.safeRemoval.description}</p>
          </dd>
        </div>

        <div class="relative bg-background-elevated p-8 rounded-2xl border border-white/10">
          <dt>
            <h3 class="flex items-center gap-x-3 text-base font-semibold leading-7 text-white">
              <svg class="h-5 w-5 flex-none text-swift-blue" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {t.features.list.quickPreview.title}
            </h3>
          </dt>
          <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-text-secondary">
            <p class="flex-auto">{t.features.list.quickPreview.description}</p>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</section>