---
const features = [
  {
    title: "Smart Detection",
    description: "Advanced algorithms ensure accurate duplicate identification based on content, not just names.",
    icon: "M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
  },
  {
    title: "Safe Removal",
    description: "Always keeps at least one copy of each file. Built-in safeguards prevent accidental deletions.",
    icon: "M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
  },
  {
    title: "Quick Preview",
    description: "Preview files before deletion to ensure you're making the right choice.",
    icon: "M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"
  }
];
---

<section id="features" class="py-24 bg-background">
  <div class="container-width">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        Everything you need to manage duplicates
      </h2>
      <p class="mt-6 text-lg leading-8 text-text-secondary">
        Powerful features designed to help you find and remove duplicate files safely and efficiently.
      </p>
    </div>

    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
      <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
        {features.map((feature) => (
          <div class="relative bg-background-elevated p-8 rounded-2xl border border-white/10">
            <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-white">
              <svg class="h-5 w-5 flex-none text-swift-blue" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon} />
              </svg>
              {feature.title}
            </dt>
            <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-text-secondary">
              <p class="flex-auto">{feature.description}</p>
            </dd>
          </div>
        ))}
      </dl>
    </div>
  </div>
</section>