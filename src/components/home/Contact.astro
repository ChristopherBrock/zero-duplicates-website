---
import { getLocaleFromUrl } from '../../i18n/ui';
import { translations } from '../../i18n/translations';
import { personalInfo } from '../../utils/constants';

const currentLang = getLocaleFromUrl(Astro.url);
const t = translations[currentLang];
---

<section id="contact" class="py-24 bg-background">
  <div class="container-width">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        {t.contact.title}
      </h2>
      <p class="mt-6 text-lg leading-8 text-text-secondary">
        {t.contact.subtitle}
      </p>
      
      <div class="mt-10">
        <a 
          href={`mailto:${personalInfo.contact.email}`}
          class="text-lg font-medium text-swift-blue hover:text-swift-blue/90 transition-colors"
          aria-label={t.contact.emailLabel}
        >
          {personalInfo.contact.email}
        </a>
      </div>
    </div>
  </div>
</section>