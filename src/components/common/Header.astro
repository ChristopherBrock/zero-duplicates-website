---
import Button from "./Button.astro";
import LanguageSwitcher from "./LanguageSwitcher.astro";
import { getLocaleFromUrl } from '../../i18n/ui';
import { translations } from '../../i18n/translations';

const currentPath = Astro.url.pathname;
const currentLang = getLocaleFromUrl(Astro.url);
const t = translations[currentLang];
const isMainPage = currentPath === `/${currentLang}` || currentPath === `/${currentLang}/`;
---

<header class="fixed w-full bg-background-elevated/80 backdrop-blur-md z-50 border-b border-white/10">
  <div class="container-width">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href={`/${currentLang}`} class="flex items-center">
          <div class="relative w-10 h-10 mr-3">
            <img
              src="/images/logo/logo@1x.png"
              srcset="/images/logo/logo@1x.png 1x,
                      /images/logo/logo@2x.png 2x"
              alt="ZeroDuplicates Logo"
              class="w-10 h-10 mr-3 rounded-[23%] shadow-md"
            />
          </div>
          <span class="text-xl font-semibold text-white">ZeroDuplicates</span>
        </a>
      </div>

      <div class="hidden md:flex items-center space-x-8">
        {isMainPage && (
          <>
            <a href="#features" class="text-sm text-text-secondary hover:text-swift-blue transition-colors">
              {t.nav.features}
            </a>
            <a href="#faq" class="text-sm text-text-secondary hover:text-swift-blue transition-colors">
              {t.nav.faq}
            </a>
            <LanguageSwitcher />
          </>
        )}
      </div>

      <div class="flex items-center space-x-4">
        <Button 
          href="#" 
          variant="primary" 
          size="md"
          class="bg-swift-blue hover:bg-swift-blue/90"
        >
          {t.nav.download}
        </Button>
      </div>
    </div>
  </div>
</header>