---
// File: components/common/SEOHead.astro
interface Props {
  title: string;
  description: string;
  lang: string;
  canonicalUrl?: string;
}

const {
  title,
  description,
  lang,
  canonicalUrl = Astro.url.href,
} = Astro.props;

const siteTitle = 'ZeroDuplicates';
const fullTitle = title;
---

<meta charset="utf-8" />
<title>{fullTitle}</title>
<meta name="description" content={description} />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<!-- Basic Favicons -->
<link rel="shortcut icon" href="/favicon.ico" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />

<!-- App-specific Meta -->
<meta name="application-name" content={siteTitle} />
<meta name="theme-color" content="#1C1C1E" />

<!-- Apple Touch Icon -->
<link rel="apple-touch-icon" href="/images/apple-touch-icon.png" />

<!-- Language and SEO -->
<link rel="canonical" href={canonicalUrl} />
<meta property="og:locale" content={lang === 'en' ? 'en_US' : 'de_DE'} />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:site_name" content={siteTitle} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonicalUrl} />

<!-- Twitter -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />

<!-- App Store -->
<meta name="apple-itunes-app" content="app-id=6738340521" />
<link rel="preconnect" href="https://apps.apple.com" />

<!-- Language Alternates -->
<link rel="alternate" href={`https://zeroduplicates.com/en`} hreflang="en" />
<link rel="alternate" href={`https://zeroduplicates.com/de`} hreflang="de" />
<link rel="alternate" href={`https://zeroduplicates.com/en`} hreflang="x-default" />